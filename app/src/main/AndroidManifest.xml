            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".Lamu"
            android:exported="false" />
        <activity
            android:name=".Nakuru"
            android:exported="false" />
        <activity
            android:name=".Diani"
            android:exported="false" />
        <activity
            android:name=".Nairobi"
            android:exported="false" />
        <activity
            android:name=".Tsavo"
            android:exported="false" />
        <activity
            android:name=".Masaimara"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>